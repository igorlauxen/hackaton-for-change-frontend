 <mvc:View controllerName="sap.ui.hackaton.hackaton.controller.SecondPage"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc">

  <Page title="{i18n>title.secondPage}" 
    showNavButton="true"
		navButtonPress="onNavBack">
    <content>
      <Image src="{secondPageModel>/imgPath}"/>
    </content>
    <footer>
      <OverflowToolbar>
        <Button text="To Previous" press="onNavBack"/>
      </OverflowToolbar>
    </footer>
  </Page>

  </mvc:View>